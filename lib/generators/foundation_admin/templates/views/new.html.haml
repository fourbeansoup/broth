#page_header
  %h1
    New <%= singular_name %>

#page_body
  / New <%= singular_name %> form
  - semantic_form_for @<%= singular_name %>, :url => admin_<%= plural_name %>_url do |f|
    = f.error_messages
    = render :partial => "form", :locals => {:f => f}
    - f.buttons do
      = f.commit_button "Create", :disables_with => "Creating..."